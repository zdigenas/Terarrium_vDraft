{
  "$schema": "https://design-tokens.github.io/community-group/format/",
  "$description": "Agentic Design System — Typography Tokens (DTCG format)",
  "typography": {
    "fontFamily": {
      "$description": "Variable fonts with full axis support — Inter Variable (wght 100-900, opsz 14-32, slnt -10 to 0), JetBrains Mono Variable (wght 100-800)",
      "sans":  { "$value": "'Inter Variable', 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif", "$type": "fontFamily" },
      "mono":  { "$value": "'JetBrains Mono Variable', 'JetBrains Mono', 'Fira Code', 'Cascadia Code', monospace", "$type": "fontFamily" },
      "serif": { "$value": "'Merriweather', 'Georgia', 'Times New Roman', serif", "$type": "fontFamily" }
    },
    "variableAxes": {
      "$description": "Variable font axis ranges — these enable continuous weight values and optical sizing",
      "weight": { "$value": { "min": 100, "max": 900 }, "$type": "number", "$description": "Inter Variable weight axis (wght)" },
      "opticalSize": { "$value": { "min": 14, "max": 32 }, "$type": "number", "$description": "Inter Variable optical size axis (opsz) — auto by default" },
      "slant": { "$value": { "min": -10, "max": 0 }, "$type": "number", "$description": "Inter Variable slant axis (slnt) — 0 is upright, -10 is italic" }
    },
    "fontWeight": {
      "regular":  { "$value": 400, "$type": "fontWeight" },
      "medium":   { "$value": 500, "$type": "fontWeight" },
      "semibold": { "$value": 600, "$type": "fontWeight" },
      "bold":     { "$value": 700, "$type": "fontWeight" }
    },
    "fontSize": {
      "$description": "Modular scale — ratio 1.25 (Major Third), base 16px",
      "xs":    { "$value": "0.64rem",  "$type": "dimension" },
      "sm":    { "$value": "0.8rem",   "$type": "dimension" },
      "base":  { "$value": "1rem",     "$type": "dimension" },
      "md":    { "$value": "1.25rem",  "$type": "dimension" },
      "lg":    { "$value": "1.563rem", "$type": "dimension" },
      "xl":    { "$value": "1.953rem", "$type": "dimension" },
      "2xl":   { "$value": "2.441rem", "$type": "dimension" },
      "3xl":   { "$value": "3.052rem", "$type": "dimension" },
      "4xl":   { "$value": "3.815rem", "$type": "dimension" }
    },
    "lineHeight": {
      "tight":   { "$value": 1.2, "$type": "number" },
      "normal":  { "$value": 1.5, "$type": "number" },
      "relaxed": { "$value": 1.75, "$type": "number" }
    },
    "letterSpacing": {
      "tight":   { "$value": "-0.025em", "$type": "dimension" },
      "normal":  { "$value": "0em", "$type": "dimension" },
      "wide":    { "$value": "0.025em", "$type": "dimension" },
      "wider":   { "$value": "0.05em", "$type": "dimension" }
    },
    "composite": {
      "$description": "Pre-composed text styles for direct use",
      "display-lg": {
        "$value": {
          "fontFamily": "{typography.fontFamily.sans}",
          "fontSize": "{typography.fontSize.4xl}",
          "fontWeight": "{typography.fontWeight.bold}",
          "lineHeight": "{typography.lineHeight.tight}",
          "letterSpacing": "{typography.letterSpacing.tight}"
        },
        "$type": "typography"
      },
      "display-md": {
        "$value": {
          "fontFamily": "{typography.fontFamily.sans}",
          "fontSize": "{typography.fontSize.3xl}",
          "fontWeight": "{typography.fontWeight.bold}",
          "lineHeight": "{typography.lineHeight.tight}",
          "letterSpacing": "{typography.letterSpacing.tight}"
        },
        "$type": "typography"
      },
      "heading-lg": {
        "$value": {
          "fontFamily": "{typography.fontFamily.sans}",
          "fontSize": "{typography.fontSize.2xl}",
          "fontWeight": "{typography.fontWeight.semibold}",
          "lineHeight": "{typography.lineHeight.tight}",
          "letterSpacing": "{typography.letterSpacing.tight}"
        },
        "$type": "typography"
      },
      "heading-md": {
        "$value": {
          "fontFamily": "{typography.fontFamily.sans}",
          "fontSize": "{typography.fontSize.xl}",
          "fontWeight": "{typography.fontWeight.semibold}",
          "lineHeight": "{typography.lineHeight.tight}",
          "letterSpacing": "{typography.letterSpacing.normal}"
        },
        "$type": "typography"
      },
      "heading-sm": {
        "$value": {
          "fontFamily": "{typography.fontFamily.sans}",
          "fontSize": "{typography.fontSize.lg}",
          "fontWeight": "{typography.fontWeight.semibold}",
          "lineHeight": "{typography.lineHeight.tight}",
          "letterSpacing": "{typography.letterSpacing.normal}"
        },
        "$type": "typography"
      },
      "body-lg": {
        "$value": {
          "fontFamily": "{typography.fontFamily.sans}",
          "fontSize": "{typography.fontSize.md}",
          "fontWeight": "{typography.fontWeight.regular}",
          "lineHeight": "{typography.lineHeight.normal}",
          "letterSpacing": "{typography.letterSpacing.normal}"
        },
        "$type": "typography"
      },
      "body-md": {
        "$value": {
          "fontFamily": "{typography.fontFamily.sans}",
          "fontSize": "{typography.fontSize.base}",
          "fontWeight": "{typography.fontWeight.regular}",
          "lineHeight": "{typography.lineHeight.normal}",
          "letterSpacing": "{typography.letterSpacing.normal}"
        },
        "$type": "typography"
      },
      "body-sm": {
        "$value": {
          "fontFamily": "{typography.fontFamily.sans}",
          "fontSize": "{typography.fontSize.sm}",
          "fontWeight": "{typography.fontWeight.regular}",
          "lineHeight": "{typography.lineHeight.normal}",
          "letterSpacing": "{typography.letterSpacing.normal}"
        },
        "$type": "typography"
      },
      "caption": {
        "$value": {
          "fontFamily": "{typography.fontFamily.sans}",
          "fontSize": "{typography.fontSize.xs}",
          "fontWeight": "{typography.fontWeight.regular}",
          "lineHeight": "{typography.lineHeight.normal}",
          "letterSpacing": "{typography.letterSpacing.wide}"
        },
        "$type": "typography"
      },
      "label": {
        "$value": {
          "fontFamily": "{typography.fontFamily.sans}",
          "fontSize": "{typography.fontSize.sm}",
          "fontWeight": "{typography.fontWeight.medium}",
          "lineHeight": "{typography.lineHeight.tight}",
          "letterSpacing": "{typography.letterSpacing.wide}"
        },
        "$type": "typography"
      },
      "code": {
        "$value": {
          "fontFamily": "{typography.fontFamily.mono}",
          "fontSize": "{typography.fontSize.sm}",
          "fontWeight": "{typography.fontWeight.regular}",
          "lineHeight": "{typography.lineHeight.relaxed}",
          "letterSpacing": "{typography.letterSpacing.normal}"
        },
        "$type": "typography"
      }
    }
  }
}
