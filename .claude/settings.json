{
  "mcpServers": {
    "playwright": {
      "command": "npx",
      "args": ["@playwright/mcp@latest"]
    },
    "a11y": {
      "command": "npx",
      "args": ["-y", "a11y-mcp"]
    }
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "node /Users/zacharydigena-segal/Terarrium_vDraft/scripts/hooks/pre-edit.mjs \"$CLAUDE_FILE_PATH\""
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "node /Users/zacharydigena-segal/Terarrium_vDraft/scripts/hooks/post-edit.mjs \"$CLAUDE_FILE_PATH\""
          }
        ]
      }
    ]
  }
}
